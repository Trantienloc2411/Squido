                                                    <img src="~/images/1_.jpg" alt="@item.Title" class="img-fluid">
                                                </div>
                                                <div class="book-info">
                                                    <h5 class="book-title">@item.Title</h5>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span class="book-price">$@item.Price</span>
